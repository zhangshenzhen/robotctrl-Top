<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginLeft="120dp"
    android:layout_height="match_parent">

      <TextView
          android:id="@+id/tv_name"
          android:layout_width="200dp"
          android:layout_height="60dp"
          android:textSize="17sp"
          android:gravity="center"
          android:background="@drawable/product_name"
          android:textColor="#121"
          android:text="广发银行新满益足 日新月益(个人版)"/>

      <TextView
          android:id="@+id/tv_kind"
          android:layout_marginTop="10dp"
          android:layout_width="100dp"
          android:layout_height="60dp"
          android:textSize="17sp"
          android:gravity="center"
          android:background="@drawable/money_king"
          android:textColor="#121"
          android:text="币种"/>

      <TextView
          android:id="@+id/tv_time"
          android:layout_marginTop="10dp"
          android:layout_width="140dp"
          android:layout_height="60dp"
          android:textSize="17sp"
          android:gravity="center"
          android:background="@drawable/money_time"
          android:textColor="#121"
          android:text="投资期限"/>

      <TextView
          android:id="@+id/tv_money"
          android:layout_marginTop="10dp"
          android:layout_width="160dp"
          android:layout_height="60dp"
          android:textSize="17sp"
          android:gravity="center"
          android:background="@drawable/money_begin"
          android:textColor="#121"
          android:text="起点金额"/>

      <TextView
          android:id="@+id/tv_rate"
          android:layout_marginTop="10dp"
          android:layout_width="250dp"
          android:layout_height="60dp"
          android:textSize="17sp"
          android:gravity="center"
          android:background="@drawable/benefit"
          android:textColor="#121"
          android:text="预期年化收益率"/>

      <TextView
          android:id="@+id/tv_danger"
          android:layout_marginTop="10dp"
          android:layout_width="160dp"
          android:layout_height="60dp"
          android:textSize="17sp"
          android:gravity="center"
          android:background="@drawable/danger"
          android:textColor="#121"
          android:text="风险等级"/>
</LinearLayout>