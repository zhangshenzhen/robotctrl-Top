<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#cc000000"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:text="是否保本"
            />
        <RadioGroup
            android:id="@+id/rg_base_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="7dp"
            android:layout_marginLeft="10dp"
            >
            <RadioButton
                android:id="@+id/rb_no_basemoney_limit"
                style="@style/radiobutton"
                android:checked="true"
                android:button="@null"
                android:text="不限"
                ></RadioButton>

            <RadioButton
                android:id="@+id/rb_basemoney"
                style="@style/radiobutton"
                android:button="@null"
                android:text="保本"
                ></RadioButton>
            <RadioButton
                android:id="@+id/rb_no_basemoney"
                style="@style/radiobutton"
                android:button="@null"
                android:text="不保本"
                ></RadioButton>

        </RadioGroup>
  </LinearLayout>